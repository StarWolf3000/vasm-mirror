	$(CC) $(INCLUDES) $(COPTS) output_vobj.c $(CCOUT)$(PRE)output_vobj.o

$(PRE)output_hunk.o: output_hunk.c output_hunk.h vasm.h osdep.h symbol.h supp.h atom.h
	$(CC) $(INCLUDES) $(COPTS) output_hunk.c $(CCOUT)$(PRE)output_hunk.o

